<h2>Search Authors</h2>

<form action="/authors">
  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="<%= searchOptions.name %>">
  <button type="submit">Search</button>
</form>

<br>

<% authors.forEach(author => { %>
  <div>
    <%= author.name %>
  </div>
<% }) %> 
